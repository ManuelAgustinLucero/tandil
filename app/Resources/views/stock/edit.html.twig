{% extends 'base.html.twig' %}

{% block body %}


    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-md-7 col-lg-offset-2">
                    <div class="card">
                        <div class="header">
                            <h4 class="title text-center">Editar stock</h4>

                        </div>
                        <div class="content">
                            {{ form_start(edit_form) }}
                            <div class="row">
                                <div class="col-md-6 " >
                                    <div class="form-group" >
                                        <label>Cantidad</label>
                                        {{ form_widget(edit_form.cantidad, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                                <div class="col-md-6 " >
                                    <div class="form-group" >
                                        <label>Precio Costo</label>
                                        {{ form_widget(edit_form.precioCosto, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>


                            <div class="row ">
                                <div class="col-md-6 " >
                                    <div class="form-group" >
                                        <label>Codigo</label>
                                        {{ form_widget(edit_form.codigo, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                                <div class="col-md-6 " >
                                    <div class="form-group" >
                                        <label>Producto</label>
                                        {{ form_widget(edit_form.producto, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>

                            <div class="row hide">
                                <div class="col-md-6 " >
                                    <div class="form-group" >
                                        <label>Precio Venta</label>
                                        {{ form_widget(edit_form.fecha, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                                <div class="col-md-6 " >
                                    <div class="form-group" >
                                        <label>Venta Descuento</label>
                                        {{ form_widget(edit_form.fechaActulizacion, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>

                            <div class="text-center">
                                <a  class="btn btn-info btn-fill btn-wd"  href="{{ path('admin_stock_index') }}">Volver a la lista</a>

                                <input class="btn btn-success btn-fill btn-wd" type="submit" value="Guardar" />
                            </div>
                            <div class="clearfix"></div>
                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}
