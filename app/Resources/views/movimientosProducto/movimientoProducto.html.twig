{% extends 'base.html.twig' %}

{% block body %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title text-center">Movimiento de Productos</h4>
                            <br>
                            {#<p class="category">Here is a subtitle for this table</p>#}
                        </div>
                        <div class="content table-responsive table-full-width">
                            <div class="text-center">
                                <div class="row">
                                    <div class="col-md-4  col-lg-offset-4">
                                        <label for="">seleccione producto para filtrar</label>
                                        <select class="form-control border-input" name="" id="idProducto">
                                            <option value=""></option>
                                            {% for stock in stocks %}
                                                <option class="text-capitalize" value="{{ stock.producto.id }}">Proveedor: {{ stock.proveedor  }} /Producto:  {{ stock.producto.codigo  }}-{{ stock.producto.titulo  }} / {{ stock.producto.tipoUnidad.tipo }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="text-center">

                                        <div class="col-sm-2 col-lg-offset-4">
                                            <label for="">Desde</label>

                                            <input id="fechaDesde"  class="form-inline form-control border-input" type="date">
                                        </div>
                                        <div class="col-sm-2">
                                            <label for="">Hasta</label>

                                            <input id="fechaHasta"  class="form-inline form-control border-input" type="date">
                                        </div>

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-2  col-lg-offset-5">
                                        <br>
                                        <button class="btn btn-info btn-fill btn-wd" onclick="filtrar()">Filtrar</button>
                                    </div>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3 col-lg-offset-3">
                                    <h3 class="bg-success text-center"> Total Vendido</h3>
                                    <p class="text-center" id="totalVenta"></p>

                                </div>
                                <div class="col-md-3">
                                    <h3 class="bg-success text-center">Cantidad Vendido</h3>
                                    <p class="text-center" id="cantidadVenta"></p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 col-lg-offset-3">
                                    <h3 class="bg-success text-center"> Total Comprado</h3>
                                    <p class="text-center" id="totalCompra"></p>

                                </div>
                                <div class="col-md-3">
                                    <h3 class="bg-success text-center">Cantidad Comprado</h3>
                                    <p class="text-center" id="cantidadCompra"></p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-6 col-lg-offset-3">
                                    <div class="content table-responsive table-full-width">
                                        <h3 class="bg-success text-center">Stock del Producto</h3>
                                        <table id="tablaStock" class="table ">
                                            <thead>
                                            <tr>
                                                <td>Proveedor</td>
                                                <td>Producto</td>
                                                <td>Cantidad</td>
                                                <td>Fecha</td>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-offset-3">
                                    <div class="content table-responsive table-full-width">
                                        <h3 class="bg-success text-center">Compras del Producto</h3>
                                        <table id="tablaCompra" class="table ">
                                            <thead>
                                                <tr>
                                                    <td>Producto</td>
                                                    <td>Cantidad</td>
                                                    <td>Precio</td>
                                                    <td>Fecha</td>
                                                </tr>
                                            </thead>
                                            <tbody>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-offset-3">
                                    <div class="content table-responsive table-full-width">
                                        <h3 class="bg-success text-center">Ventas del Producto</h3>

                                        <table id="tablaDetalleVenta" class="table ">
                                            <thead>
                                            <tr>
                                                <td>Producto</td>
                                                <td>Cantidad</td>
                                                <td>Precio</td>
                                                <td>Fecha</td>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/moments.js') }}" ></script>

    <script>
        $(document).ready(function() { $("#idProducto").select2(); });

    </script>
    <script type="text/javascript">
        const tablaCompra = "#tablaCompra";
        const tablaDetalleVenta = "#tablaDetalleVenta";
        const tablaStock = "#tablaStock";

        function filtrar(){
            var id=$("#idProducto").val();
            var desde=$("#fechaDesde").val();
            var hasta=$("#fechaHasta").val();

            var fila;


            var totalVendido=0;
            var totalCantidad=0;

            var totalComprado=0;
            var totalCantidadComprado=0;
            $(document).ready(function () {
                $.ajax({
                    type: "POST",
                    url: "{{ path ("admin_producto_get_moviminetos") }}",
                    data:{producto:id,desde:desde,hasta:hasta},
                }).done(function (data) {
                    console.log(data);
                    //Compra
                    $(tablaCompra + ' tbody').empty();
                    for (var i = 0; i < data.compra.length; i++) {
                        totalComprado=totalComprado+parseFloat(data.compra[i].precioCompra * data.compra[i].cantidad);
                        totalCantidadComprado=totalCantidadComprado+parseFloat(data.compra[i].cantidad);
                        fila = '<tr><td>'+data.compra[i].titulo+'</td><td>'+data.compra[i].cantidad+'</td> <td>$'+data.compra[i].precioCompra+'</td><td>'+data.compra[i].fechaRegistro.date+'</td></tr>';
                        $(tablaCompra + ' tbody').append(fila);
                    }
                    $("#totalCompra").text("$"+totalComprado.toFixed(2));
                    $("#cantidadCompra").text(totalCantidadComprado);
                    //Detalle venta
                    $(tablaDetalleVenta + ' tbody').empty();
                    fila="";
                    for (var i = 0; i < data.detalleVenta.length; i++) {
                        totalVendido=totalVendido+parseFloat(data.detalleVenta[i].precio * data.detalleVenta[i].cantidad);
                        totalCantidad=totalCantidad+parseFloat(data.detalleVenta[i].cantidad);
                        fila = '<tr><td>'+data.detalleVenta[i].titulo+'</td><td>'+data.detalleVenta[i].cantidad+'</td> <td>$'+data.detalleVenta[i].precio+'</td><td>'+data.detalleVenta[i].fecha.date+'</td></tr>';
                        $(tablaDetalleVenta + ' tbody').append(fila);

                    }
                    $("#totalVenta").text("$"+totalVendido.toFixed(2));
                    $("#cantidadVenta").text(Math.round( totalCantidad* 100) / 100);
                    //Stock
                    $(tablaStock + ' tbody').empty();
                    fila="";
                    for (var i = 0; i < data.stock.length; i++) {
                        fila = '<tr><td>'+data.stock[i].nombre+'</td><td>'+data.stock[i].titulo+'</td> <td>'+data.stock[i].cantidad+'</td><td>'+data.stock[i].fechaActulizacion.date+'</td></tr>';
                        $(tablaStock + ' tbody').append(fila);

                    }

                });

            });
        }

    </script>
{% endblock %}
