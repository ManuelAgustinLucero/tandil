{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function() { $("#idCliente").select2(); });
        $(document).ready(function() { $("#idStock").select2(); });

    </script>
    <script type="text/javascript">
        const tablaProductoVenta = "#tablaProductoVenta";
        const tablaVenta = "#tablaVenta";

        var agregadosArray=[];


        if (JSON.parse(localStorage.getItem('venta'))!=null){
            agregadosArray=JSON.parse(localStorage.getItem('venta'));
        }
        var total=0;
        var totalComision=0;

        var idPdf=0;
        var cantidadProducto;
        var precio;
        var cantidad=0;
        var idCliente=localStorage.getItem("idCliente");
        inicial();
        $(tablaProductoVenta + ' tbody').html('');
        function SelectProducto(){
            var id=$('#idStock').val();
            cantidadProducto=0;
            precio=0;

            $(document).ready(function () {
                $.ajax({
                    type: "POST",
                    url: "{{ path ("admin_venta_getstock") }}",
                    data:{idStock:id},
                }).done(function (data) {
                    var fila;
                    cantidadProducto=data[0].cantidad;
                    $(tablaProductoVenta + ' tbody').empty();
                    for (var i = 0; i < data.length; i++) {
                        fila = '<tr><td id="titulo">'+data[i].titulo+'</td><td>'+data[i].cantidad+'</td> <td>'+data[i].tipo+'</td><td><span class="text-danger text-center" id="span"></span><input type="number"  onkeyup="myFunction()" id="cantidad" class="form-control border-input  " ></td><td><input type="number"  value="'+data[i].importe+'" id="precioTotal" class="form-control border-input" ></td><td><input type="number"  id="precioComision" class="form-control border-input" ></td><td><button class="btn btn-success btn-fill btn-wd" onclick="Agregar('+data[i].producto_id+')">Agregar</button></td></tr>';

                        $(tablaProductoVenta + ' tbody').append(fila);

                    }

                    $('input[type="checkbox"]').on('change', function() {
                        $('input[name="' + this.name + '"]').not(this).prop('checked', false);
                    });
                });

            });
        }


        function inicial() {
            if ( agregadosArray.length>0){
                 $(tablaVenta + ' tbody').html('');
                var fila;
                var filaTotal;
                total=0;
                totalComision=0;
                for (var i = 0; i < agregadosArray.length; i++) {

                    fila = '<tr><td >'+agregadosArray[i].descripcion+'</td> <td>$'+agregadosArray[i].precioUnidad+'</td><td>'+agregadosArray[i].cantidad+'</td><td>$'+agregadosArray[i].precioTotal+'</td><td>$'+agregadosArray[i].precioComision+'</td><td><button onclick="eliminar('+i+')" class="btn btn-danger btn-fill btn-wd">Eliminar</button></td></tr>' ;

                    total=parseFloat(agregadosArray[i].precioTotal)+parseFloat(total);
                    totalComision=parseFloat(agregadosArray[i].precioComision)+parseFloat(totalComision);
                    $(tablaVenta + ' tbody').append(fila);


                }
                filaTotal='<tr><td></td><td></td><td>Total:</td><td>$'+total+'</td><td>$'+totalComision+'</td></tr>';
                $(tablaVenta + ' tbody').append(filaTotal);

                $( "#total" ).text( "$"+total );
            }

        }

        function myFunction() {
             cantidad=$('#cantidad').val();
             if ( parseInt(cantidad) <= parseInt(cantidadProducto)){
                 $("#cantidad").css("background-color","");
                 $('#span').text("");

                 // $('#precioTotal').val(precio* cantidad);

             } else{
                 $("#cantidad").css("background-color","#FF8F5E");
                 // $('#precioTotal').val(0);
                 $('#span').text("Paso maximo de stock");


             }

        }
        function Agregar(producto_id) {
            if (cantidad !=0 ){
                $( "#button" ).removeClass( "hide" );
                idCliente=$('#idCliente').val();
                localStorage.setItem('idCliente',idCliente);
                var descripcion=$('#titulo').text();

                var precioTotal=parseFloat($("#precioTotal").val())*cantidad;

                agregadosArray.push({idProducto:producto_id,idCliente:idCliente,descripcion:descripcion,cantidad:cantidad,precioUnidad:$("#precioTotal").val(),precioComision:$("#precioComision").val(),precioTotal:precioTotal,idStock:$("#idStock").val()});
                localStorage.setItem('venta', JSON.stringify(agregadosArray));

                console.log(agregadosArray);
                $(tablaVenta + ' tbody').html('');
                var fila;
                var filaTotal;

                total=0;
                totalComision=0;

                for (var i = 0; i < agregadosArray.length; i++) {

                    fila = '<tr><td >'+agregadosArray[i].descripcion+'</td> <td>$'+agregadosArray[i].precioUnidad+'</td><td>'+agregadosArray[i].cantidad+'</td><td>$'+agregadosArray[i].precioTotal+'</td><td>$'+agregadosArray[i].precioComision+'</td><td><button onclick="eliminar('+i+')" class="btn btn-danger btn-fill btn-wd">Eliminar</button></td></tr>' ;

                    total=parseFloat(agregadosArray[i].precioTotal)+parseFloat(total);
                    totalComision=parseFloat(agregadosArray[i].precioComision)+parseFloat(totalComision);

                    $(tablaVenta + ' tbody').append(fila);


                }
                filaTotal='<tr><td></td><td></td><td>Total:</td><td>$'+total+'</td><td>$'+totalComision+'</td></tr>';
                $(tablaVenta + ' tbody').append(filaTotal);

                $( "#total" ).text( "$"+total );
            } else{
                $.notify({
                    icon: 'ti-check-box',
                    message: "Complete la cantidad"

                },{
                    type: 'danger',
                    timer: 4000
                });
            }

        }
        function Facturar() {
            if (agregadosArray.length!=0){
                $(document).ready(function () {
                    $.ajax({
                        type: "POST",
                        url: "{{ path ("admin_venta_altaVenta") }}",
                        data: {idCliente:idCliente,productoVenta:agregadosArray,total:total,totalComision:totalComision}
                    }).done(function (data) {
                        localStorage.removeItem("venta");
                        localStorage.removeItem("idCliente");
                        console.log(data);
                        //window.location.href = "http://www.beniar.com.ar/venta/pdfVenta/"+data;
                        // window.open("http://127.0.0.1:8000/venta/pdfVenta/"+data, "_blank");

                        $.notify({
                            icon: 'ti-check-box',
                            message: "Factura realizada con exito"

                        },{
                            type: 'success',
                            timer: 4000
                        });
                        location.reload();

                    });

                })
            } else{
                $.notify({
                    icon: 'ti-check-box',
                    message: "No agrego productos"

                },{
                    type: 'danger',
                    timer: 4000
                });
            }

        }
        function cleara() {
            location.reload();

        }



        function eliminar(id){

            agregadosArray.splice(id, 1);
            $("#tablaVentaBody").empty();
            localStorage.setItem('venta', JSON.stringify(agregadosArray));

            var fila;
            var filaTotal;

            total=0;
            totalComision=0;

            for (var i = 0; i < agregadosArray.length; i++) {
                fila = '<tr><td >'+agregadosArray[i].descripcion+'</td> <td>$'+agregadosArray[i].precioUnidad+'</td><td>'+agregadosArray[i].cantidad+'</td><td>$'+agregadosArray[i].precioTotal+'</td><td>$'+agregadosArray[i].precioComision+'</td><td><button onclick="eliminar('+i+')" class="btn btn-danger btn-fill btn-wd">Eliminar</button></td></tr>' ;
                /*
                */
                total=parseFloat(agregadosArray[i].precioTotal)+parseFloat(total);
                totalComision=parseFloat(agregadosArray[i].precioComision)+parseFloat(totalComision);
                $(tablaVenta + ' tbody').append(fila);


            }

            filaTotal='<tr><td></td><td></td><td>Total:</td><td>$'+total+'</td><td>$'+totalComision+'</td></tr>';
            $(tablaVenta + ' tbody').append(filaTotal);

            $( "#total" ).text( "$"+total );
        }



    </script>
{% endblock %}
