{% extends 'base.html.twig' %}

{% block body %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Lista de Categoria</h4>

                            <br>
                            {#<p class="category">Here is a subtitle for this table</p>#}
                        </div>
                        <div class="content table-responsive table-full-width">
                            <table id="myTable" class="table table-striped">
                                <thead>
                                <tr>
                                    <th class="text-center">Descripcion</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for familium in familias %}
                                    <tr>
                                        <td class="text-center">{{ familium.descripcion }}</td>
                                        <td class="text-center">
                                                    <a  href="{{ path('admin_familia_show', { 'id': familium.id }) }}">Detalle</a>
                                                <br>
                                                    <a href="{{ path('admin_familia_edit', { 'id': familium.id }) }}">Editar</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-md-6 col-md-offset-5">
                                    <a class="btn btn-info btn-fill btn-wd" href="{{ path('admin_familia_new') }}">Crear nueva categoria</a>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
