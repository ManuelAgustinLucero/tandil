{% extends 'base.html.twig' %}

{% block body %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-md-7 col-lg-offset-2">
                    <div class="card">
                        <div class="header">
                            <h4 class="title text-center">Crear Proveedor</h4>

                        </div>
                        <div class="content">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6 col-lg-offset-3" >
                                    <div class="form-group" >
                                        <label>Codigo</label>
                                        {{ form_widget(form.codigo, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>


                            </div>
                            <div class="row">
                                <div class="col-md-6 col-lg-offset-3" >
                                    <div class="form-group" >
                                        <label>Nombre</label>
                                        {{ form_widget(form.nombre, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-lg-offset-3" >
                                    <div class="form-group" >
                                        <label>Ciudad:</label>
                                        {{ form_widget(form.ciudad, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>

                            <div class="row hide">
                                <div class="col-md-6 col-lg-offset-3" >
                                    <div class="form-group" >
                                        <label>Ciudad:</label>
                                        {{ form_widget(form.fechaRegistro, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                            </div>


                            <div class="text-center">
                                <a  class="btn btn-info btn-fill btn-wd"  href="{{ path('admin_proveedor_index') }}">Volver a la lista</a>

                                <input class="btn btn-success btn-fill btn-wd" type="submit" value="Crear" />
                            </div>
                            <div class="clearfix"></div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

    </script>
{% endblock %}
